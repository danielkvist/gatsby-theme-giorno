{
	"compilerOptions": {
		"target": "ES2015",
		"module": "commonjs",
		"strict": true,
		"lib": ["dom", "es2015", "es2017"],
		"esModuleInterop": true,
		"skipLibCheck": true,
		"forceConsistentCasingInFileNames": true,
		"noEmit": true
	},
	"include": ["./gatsby-theme-giorno/src/", "./demo/src/"],
	"exclude": [
		"node_modules",
		"./demo/node_modules",
		"./gatsby-theme-giorno/node_modules"
	]
}
